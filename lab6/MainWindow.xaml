<Window xmlns:PlotView="clr-namespace:PlotView;assembly=PlotView"  x:Class="lab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab6"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <PlotView:PlotView x:Name="plot"/>

        <Button x:Name="button" Content="Отобразить" Margin="19,0,0,13" Height="20" VerticalAlignment="Bottom" Click="button_Click" HorizontalAlignment="Left" Width="76"/>
        <TextBox x:Name="countOfPoints" HorizontalAlignment="Left" Height="23" Margin="19,0,0,38" TextWrapping="Wrap" Text="1000" VerticalAlignment="Bottom" Width="76"/>
    </Grid>
</Window>
